@model E_Greetings.Models.tb_cards

@{
    ViewBag.Title = "Add Cards";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "cards", FormMethod.Post, new { enctype="multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        <div class="form-group">
        @Html.Label("Card Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ca_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ca_name, "", new { @class = "text-danger" })
        </div>
    </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Card Picture", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label>Enter Image Url</label>
                <input type="text" name="file1" />
                @Html.ValidationMessageFor(model => model.ca_pic, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Select Category", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ca_fk_c", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ca_fk_c, "", new { @class = "text-danger" })
            </div>
        </div>
        @ViewBag.msg
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
