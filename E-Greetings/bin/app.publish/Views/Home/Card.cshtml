@model E_Greetings.Models.tb_cards

@{
    ViewBag.Title = "Card Details";
    Layout = "~/Views/Shared/_layout.cshtml";
}


<div class="ps-product--detail pt-60">
    <div class="ps-container">
        <div class="row">
            <div class="col-md-6">
                <div class="ps-product__image">
                    <div>
                        <img src="@Html.DisplayFor(model => model.ca_pic)" name="imm"/>
                       
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="ps-product__info">
                    <h1>@Html.DisplayFor(model => model.ca_name)</h1>
                    <div class="ps-product__block ps-product__quickview">
                        <h4></h4>
                        @using (Html.BeginForm("Card", "Home", FormMethod.Post))
                        {
                            
                            @Html.HiddenFor(x=>x.ca_pic)
                            <div class="form-group">
                                <label>Subject<span>*</span></label>
                                <input class="form-control" type="text" name="sub" />
                            </div>
                            <div class="form-group">
                                <label>Email<span>*</span></label>
                                <input class="form-control" type="email" name="to" />
                            </div>
                            <div class="form-group">
                                <label>Your message<span>*</span></label>
                                <textarea class="form-control" rows="4" name="msg"></textarea>
                            </div>
                            <div class="form-group">
                                <button class="ps-btn" type="submit">
                                    Send Card<i class="fa fa-angle-right"></i>
                                </button>
                            </div>
                            @ViewBag.msg
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>