@model IEnumerable<E_Greetings.Models.tb_feedback>

@{
    ViewBag.Title = "View Feedback";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<h2>Feedbacks</h2>
<div style="text-align:right;" class="search-form">
    @using (Html.BeginForm("Index", "feedback", FormMethod.Post))
    {
        <input style="
  width: 140px;
  padding: 0.375rem 0.75rem;
  font-size: 1rem;
  color: #495057;
  background-color: #fff;
  background-clip: padding-box;
  border: 1px solid #ced4da;
  border-radius: 0.25rem;
  transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;" type="text" name="search" />
        <button style="margin-bottom:4px;" type="submit" class="btn btn-default">Search</button>
    }
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("User Reaction")
        </th>
        <th>
            @Html.DisplayName("User Email")
        </th>
        <th>
            @Html.DisplayName("User Message")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FD_reaction)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FD_email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FD_message)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.FD_id })
        </td>
    </tr>
}

</table>
